<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>

<VBox alignment="CENTER" spacing="10" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.controle.view.CategoryController">
    <padding>
        <javafx.geometry.Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Gerenciamento de Categorias" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <GridPane hgap="10" vgap="10">
        <Label text="Nome da Categoria:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <TextField fx:id="categoryNameField" promptText="Ex: Alimentação" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

        <Label text="Tipo:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <ComboBox fx:id="categoryTypeComboBox" promptText="Selecione o tipo" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

        <Button text="Adicionar Categoria" onAction="#handleAddCategory" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
    </GridPane>

    <Label text="Lista de Categorias" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
    <TableView fx:id="categoryTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="colId" text="ID"/>
            <TableColumn fx:id="colName" text="Nome"/>
            <TableColumn fx:id="colType" text="Tipo"/>
        </columns>
    </TableView>

    <Button text="Voltar para o Menu Principal" onAction="#handleGoBack"/>
</VBox>