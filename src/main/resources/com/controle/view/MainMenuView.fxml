<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.controle.view.MenuController" styleClass="root">
    <padding>
        <Insets top="40" right="40" bottom="40" left="40"/>
    </padding>

    <top>
        <Label text="Menu Principal" styleClass="label-title" BorderPane.alignment="CENTER"/>
    </top>

    <center>
        <VBox alignment="CENTER" spacing="20">
            <Button text="Gerenciar Categorias" prefWidth="200" onAction="#handleManageCategories" styleClass="button"/>
            <Button text="Gerenciar Transações" prefWidth="200" onAction="#handleManageTransactions" styleClass="button"/>
            <Button text="Visualizar Relatórios" prefWidth="200" onAction="#handleViewReports" styleClass="button"/>
            <Button text="Sair" prefWidth="200" onAction="#handleExit" styleClass="button"/>
        </VBox>
    </center>
</BorderPane>