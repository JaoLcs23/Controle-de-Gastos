<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>

<BorderPane prefHeight="750.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/17.0.8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.controle.view.MenuController">
    <top>
        <Label fx:id="fullScreenHintLabel" styleClass="full-screen-hint-label" text="" visible="false" BorderPane.alignment="CENTER">
            <BorderPane.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </BorderPane.margin>
        </Label>
    </top>
    <center>
        <VBox alignment="CENTER" spacing="20.0">
            <padding>
                <Insets bottom="50.0" left="50.0" right="50.0" top="50.0" />
            </padding>
            <Button mnemonicParsing="false" onAction="#handleManageCategories" prefWidth="200.0" text="Gerenciar Categorias" />
            <Button mnemonicParsing="false" onAction="#handleManageTransactions" prefWidth="200.0" text="Gerenciar Transações" />
            <Button mnemonicParsing="false" onAction="#handleViewReports" prefWidth="200.0" text="Visualizar Relatórios" />
            <Button mnemonicParsing="false" onAction="#handleExit" prefWidth="200.0" text="Sair" />
        </VBox>
    </center>
</BorderPane>