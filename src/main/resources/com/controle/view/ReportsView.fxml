<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_CENTER" spacing="15" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.controle.view.ReportsController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Relatórios Financeiros" />

    <VBox alignment="CENTER_LEFT" spacing="5">
        <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Balanço Geral:" />
        <Label fx:id="totalBalanceLabel" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: green;" text="R$ 0.00" />
    </VBox>

    <VBox alignment="CENTER_LEFT" spacing="5">
        <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Despesas por Categoria (Período):" />
        <GridPane hgap="10.0" vgap="5.0">
            <Label text="De:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
            <DatePicker fx:id="startDatePicker" GridPane.columnIndex="1" GridPane.rowIndex="0" />
            <Label text="Até:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
            <DatePicker fx:id="endDatePicker" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            <Button onAction="#handleGenerateCategoryReport" text="Gerar Relatório" GridPane.columnIndex="1" GridPane.rowIndex="2" />
        </GridPane>
    </VBox>

    <TableView fx:id="categoryExpensesTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="colCategoryName" prefWidth="250.0" text="Categoria" />
            <TableColumn fx:id="colCategoryAmount" prefWidth="150.0" text="Valor Total" />
        </columns>
    </TableView>

    <Button onAction="#handleGoBack" text="Voltar para o Menu Principal" />
</VBox>