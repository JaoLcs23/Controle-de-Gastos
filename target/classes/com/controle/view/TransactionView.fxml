<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="10" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.controle.view.TransactionController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Gerenciamento de Transações" />
    <GridPane hgap="10.0" vgap="10.0">
        <children>
            <Label text="Descrição:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
            <TextField fx:id="descriptionField" promptText="Ex: Compra de mercado" GridPane.columnIndex="1" GridPane.rowIndex="0" />
            <Label text="Valor:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
            <TextField fx:id="valueField" promptText="Ex: 50.00" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            <Label text="Data:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
            <DatePicker fx:id="datePicker" GridPane.columnIndex="1" GridPane.rowIndex="2" />
            <Label text="Tipo:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
            <ComboBox fx:id="typeComboBox" promptText="Selecione o tipo" GridPane.columnIndex="1" GridPane.rowIndex="3" />
            <Label text="Categoria:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
            <ComboBox fx:id="categoryComboBox" promptText="Selecione a categoria" GridPane.columnIndex="1" GridPane.rowIndex="4" />
            <Button onAction="#handleAddTransaction" text="Adicionar Transação" GridPane.columnIndex="1" GridPane.rowIndex="5" />
        </children>
    </GridPane>
    <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Lista de Transações" />
    <TableView fx:id="transactionTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="colId" prefWidth="40.0" text="ID" />
            <TableColumn fx:id="colDescription" prefWidth="180.0" text="Descrição" />
            <TableColumn fx:id="colValue" prefWidth="80.0" text="Valor" />
            <TableColumn fx:id="colDate" prefWidth="100.0" text="Data" />
            <TableColumn fx:id="colType" prefWidth="80.0" text="Tipo" />
            <TableColumn fx:id="colCategory" prefWidth="120.0" text="Categoria" />
        </columns>
    </TableView>
    <Button onAction="#handleGoBack" text="Voltar para o Menu Principal" />
</VBox>